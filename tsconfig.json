{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs", // updated module
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": "./",
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "packages/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}